<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-sm-4 mb-3">
  <%= form.text_field :first_name, class:"form-control form-control-lg", placeholder:"First Name", 'aria-label': "First Name"  %>
</div>

<div class="col-sm-4 mb-3">
  <%= form.text_field :last_name, class:"form-control form-control-lg", placeholder:"Last Name", 'aria-label': "Last Name" %>
</div>

<div class="col-sm-4 mb-3">
  <%= form.text_field :email, class:"form-control form-control-lg", placeholder:"Email", 'aria-label': "Email" %>
</div>

<div class="col-sm-4 mb-3">
  <%= form.text_field :phone, class:"form-control form-control-lg", placeholder:"Phone Number", 'aria-label': "Phone Number" %>
</div>

<div class="col-sm-4 mb-3">
  <%= form.text_field :twitter, class:"form-control form-control-lg", placeholder:"Twitter", 'aria-label': "Twitter" %>
</div>

<div>
  <%= form.submit :submit, class:"btn btn-success" %>
</div>
<% end %>
