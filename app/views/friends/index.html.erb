<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover align-middle text-center">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <%= render friend %>
      <td><%= link_to "Show", friend, class:"btn mx-auto" %></td>
      <td><%= link_to "edit", edit_friend_path(friend), class:"btn mx-auto" %>
      <td><%= button_to "delete", friend, method: :delete, class:"btn mx-auto" %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>
